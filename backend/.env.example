# ============================================
# FEDHEALTH SYSTEM - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# This file should NEVER be committed to git

# ============================================
# CRITICAL SECURITY CONFIGURATION
# ============================================

# Django Secret Key - CHANGE THIS IMMEDIATELY
# Generate new key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# Keep this ABSOLUTELY SECRET - do NOT commit .env to git
SECRET_KEY=django-insecure-fedhealth-secret-key-2026

# Debug mode - MUST be False in production
DEBUG=True

# ============================================
# DATABASE CONFIGURATION
# ============================================

# MongoDB Connection String
# Local MongoDB: mongodb://localhost:27017/
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/fedhealth?retryWrites=true&w=majority
MONGO_DB_URL=mongodb://localhost:27017/

# ============================================
# APPLICATION SETTINGS
# ============================================

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Frontend CORS origin
FRONTEND_URL=http://localhost:3000

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT token expiration in days
JWT_EXPIRATION_DAYS=30

# Bcrypt rounds for password hashing (12+ recommended for production)
BCRYPT_ROUNDS=12

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# PRODUCTION SECURITY CHECKLIST
# ============================================
# [ ] Set DEBUG=False in production
# [ ] Generate new SECRET_KEY (do NOT use default)
# [ ] Configure MongoDB with strong authentication
# [ ] Set proper ALLOWED_HOSTS
# [ ] Enable HTTPS in production
# [ ] Use secure CORS origins
# [ ] Set appropriate BCRYPT_ROUNDS (12+)
# [ ] Store .env file securely (never commit to git)
# [ ] Rotate SECRET_KEY periodically
# [ ] Enable audit logging for all authentication attempts
